{
  "name": "server-six-cities",
  "version": "1.0.0",
  "author": "Vladyslav Sliusar",
  "license": "ISC",
  "main": "main.js",
  "type": "module",
  "imports": {
    "#src/*": "./dist/*"
  },
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "scripts": {
    "dev": "nodemon",
    "watch": "tsc -w",
    "pino": "pino-pretty --colorize --translateTime SYS:standard",
    "start": "npm run build && node ./dist/main.rest.js",
    "build": "npm run clean && npm run compile",
    "clean": "rimraf dist",
    "compile": "tsc -p tsconfig.json",
    "lint": "eslint src/ --ext .ts --fix",
    "docker:start": "docker compose --file ./docker-compose.dev.yml --env-file .env --project-name \"six-cities\" up",
    "mock:server": "json-server --watch mocks/mock-server-data.json --port 3123 --host 127.0.0.1",
    "mock:generate": "node ./dist/main.cli.js --generate 2 ./mocks/mock-data.tsv http://localhost:3123/api",
    "mock:import": "node ./dist/main.cli.js --import ./mocks/mock-data.tsv db_username db_password db_host db_port db_name salt"
  },
  "dependencies": {
    "@typegoose/typegoose": "12.7.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.12",
    "dotenv": "16.4.5",
    "express": "4.21.0",
    "express-async-handler": "1.2.0",
    "got": "14.4.2",
    "http-status-codes": "2.3.0",
    "inversify": "6.0.2",
    "mongoose": "8.6.1",
    "pino": "9.4.0",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "9.9.0",
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/express": "4.17.21",
    "@types/node": "22.3.0",
    "@typescript-eslint/eslint-plugin": "8.1.0",
    "@typescript-eslint/parser": "8.1.0",
    "eslint": "9.9.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "json-server": "0.17.3",
    "nodemon": "3.1.4",
    "pino-pretty": "11.2.2",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "typescript": "5.5.4",
    "typescript-eslint": "8.1.0"
  }
}
