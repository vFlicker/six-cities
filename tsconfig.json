{
  "compilerOptions": {
    /* Basic Options */
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
